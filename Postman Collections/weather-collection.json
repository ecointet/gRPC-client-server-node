		"_postman_id": "c0358480-52f2-44e0-be10-745ee2c6fe24",
		"name": "Weather API by ecointet",
		"description": "A Full API Collection to get a city temperature (depending of another city)",
		"schema": "https://schema.getpostman.com/json/collection/v2.0.0/collection.json"
	},
	"item": [
		{
			"name": "Get Current Weather",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "8dac3dcb-b545-48ec-a210-64edfd35cf5b",
						"exec": [
							"pm.test(\"Temperature from the result\", function ()",
							"{",
							"    let result = pm.response.json(); // get result",
							"    let current_temp = result.main.temp; // get current weather (Far.)",
							"    pm.environment.set(\"temp\", current_temp); // store it in envs",
							"});",
							"",
							"pm.test(\"Temperature value\", function ()",
							"{",
							"    pm.expect(pm.environment.get(\"temp\")).to.greaterThan(0); // minus temp is rare",
							"    pm.expect(pm.environment.get(\"temp\")).to.below(100); // high temp is rare",
							"});",
							"",
							"if (pm.environment.get(\"location\") == pm.collectionVariables.get(\"city\"))",
							"{",
							"    if (pm.environment.get(\"temp\") > 50)",
							"        return displayTemp(\"Bangalore, IND\");",
							"    return displayTemp(\"London, UK\");",
							"}",
							"",
							"displayTemp(null);",
							"",
							"function displayTemp(newCountry)",
							"{",
							"    let temp = pm.environment.get(\"temp\");",
							"    if (temp == undefined || Number.isInteger(temp)) return;",
							"    pm.collectionVariables.set(\"temperature\", temp);",
							"    pm.collectionVariables.set(\"city\", newCountry);",
							"",
							"    console.log(\"The Temperature is \"+temp+\"F in \"+pm.environment.get(\"location\"));",
							"    if (newCountry)",
							"    {",
							"        pm.environment.set(\"location\", newCountry);",
							"        postman.setNextRequest(\"Get Current Weather\");",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"id": "fe400ccc-c772-4026-a694-2ffead4c01c4",
						"exec": [
							"if (!pm.environment.has('location'))",
							"    pm.environment.set(\"location\", pm.variables.get(\"city\"));"
						],
						"type": "text/javascript"
					}
				}
			],
