{
	"info": {
		"_postman_id": "c0358480-52f2-44e0-be10-745ee2c6fe24",
		"name": "Weather API by ecointet",
		"schema": "https://schema.getpostman.com/json/collection/v2.0.0/collection.json"
	},
	"item": [
		{
			"name": "Get Current Weather",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "8dac3dcb-b545-48ec-a210-64edfd35cf5b",
						"exec": [
							"pm.test(\"Temperature from the result\", function () {",
							"let result = pm.response.json(); // get result",
							"let current_temp = result.main.temp; // get current weather (celsius)",
							"pm.environment.set(\"temp\", current_temp); // store it in envs",
							"});",
							"",
							"pm.test(\"Temperature value\", function () {",
							"pm.expect(pm.environment.get(\"temp\")).to.greaterThan(0);",
							"// minus temp is rare (and check it's an integer)",
							"});",
							"",
							"if(pm.environment.get(\"temp\") > 50){",
							"    console.log(\"Temperature higher than 50\");",
							"    postman.setNextRequest(\"Get Current Weather\");",
							"} else {",
							"    console.log(\"Temperature lower than 50\");",
							"    postman.setNextRequest(\"Get Current Weather\");",
							"}"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"id": "fe400ccc-c772-4026-a694-2ffead4c01c4",
						"exec": [
							"console.log(\"City: San Francisco\");"
						],
						"type": "text/javascript"
					}
				}
			],
			"id": "0d2a5df3-5775-4594-9529-6d94aae03800",
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
